<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="20dp" >
    
    <TextView
        android:id="@+id/lblHighScoreName"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="@style/HighScoreStyle"
        android:text="@string/highScoreName"         
        />
    
    <TextView
        android:id="@+id/lblHighScoreDifficulty"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="@style/HighScoreStyle"
        android:text="@string/highScoreDifficulty" 
        />

    <TextView
        android:id="@+id/lblHighScoreScore"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="@style/HighScoreStyle" 
        android:text="@string/highScoreScore" 
        />

</LinearLayout>
