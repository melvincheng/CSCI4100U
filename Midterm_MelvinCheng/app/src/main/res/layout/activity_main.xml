<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

	<!-- This spinner will hold the housing projects available, once loaded -->
    <Spinner
        android:id="@+id/lstHousingProjects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        />

    <TextView
        android:text="@string/address_lbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"/>
    <EditText
        android:id="@+id/address_edit"
        android:inputType="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"/>
    <TextView
        android:text="@string/municipality_lbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"/>
    <EditText
        android:id="@+id/municipality_edit"
        android:inputType="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"/>
    <TextView
        android:text="@string/latitude_lbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"/>
    <EditText
        android:id="@+id/latitude_edit"
        android:inputType="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"/>
    <TextView
        android:text="@string/longitude_lbl"
        android:inputType="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"/>
    <EditText
        android:id="@+id/longitude_edit"
        android:inputType="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"/>
    <TextView
        android:text="@string/numUnits_lbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"/>
    <EditText
        android:id="@+id/numUnits_edit"
        android:inputType="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    
    <!-- 
    TODO:  Add labels and (uneditable) text fields for all five HousingProject fields:
    - address
    - municipality
    - latitude
    - longitude
    - numUnits
    -->

</LinearLayout>
